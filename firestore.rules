rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document, but not list all users
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Call history is private to each user
    match /users/{userId}/calls/{callId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Friends list is private to each user
    match /users/{userId}/friends/{friendId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rooms for WebRTC signaling
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;
    }

    match /rooms/{roomId}/{c=**} {
        allow read, write: if request.auth != null;
    }
  }
}
